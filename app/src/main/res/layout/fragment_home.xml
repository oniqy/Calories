<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:layout_editor_absoluteX="-16dp"
    tools:layout_editor_absoluteY="-120dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp">

                <ImageView
                    android:id="@+id/userImg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/user" />

                <TextView
                    android:id="@+id/userHello"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/userImg"
                    android:text="Hi, BeanieDD"
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/userDate"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:text="Tue, June 8 23"
                    android:textSize="8pt"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/cricel_shape"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="75"
                    android:progressDrawable="@drawable/circolum_process" />

                <TextView
                    android:id="@+id/progress_text"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="2815/&#10;kcal"
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_caloIn"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/text_notification_edit"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Calo đã nạp: "
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_notification_edit"
                    android:layout_width="182dp"
                    android:layout_height="27dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="89dp"
                    android:layout_toStartOf="@+id/progressBar"
                    android:clickable="true"
                    android:minHeight="48dp"
                    android:text="Chỉnh sửa chỉ số BMR"
                    android:textColor="#594CE7"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/user_caloOut"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/user_caloIn"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Calo tiêu hao: "
                    android:textColor="#504E4E"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/numb_caloIn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/text_notification_edit"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/user_caloIn"
                    android:shadowColor="#000000"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="1.6"
                    android:text="2650"
                    android:textColor="#00FF47"
                    android:textSize="10pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/numb_caloOut"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/numb_caloIn"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/user_caloOut"
                    android:shadowColor="#000000"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="1.6"
                    android:text="700"
                    android:textColor="#FFFFFF"
                    android:textSize="10pt"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <RelativeLayout
                    android:id="@+id/layout_chatdam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"

                        android:text="Chất đạm"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progressBar2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:max="100"
                        android:minWidth="100dp"
                        android:minHeight="50dp"
                        android:progress="75" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_chatbeo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_chatdam">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Chất béo"
                        android:textSize="10pt"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progressBar3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:max="100"
                        android:minWidth="100dp"
                        android:minHeight="50dp"
                        android:progress="75" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/layout_chatbeo">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Carbs"
                        android:textColor="@color/black"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progressBar4"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:max="100"
                        android:minWidth="100dp"
                        android:minHeight="50dp"

                        android:progress="75" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/tv_todaymeals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="9dp"
                    android:textColor="@color/black"
                    android:text="Today's Meals"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_todaymeals"
                    android:background="@drawable/add_meal_background">

                    <Spinner
                        android:id="@+id/sp_tapluyen"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"

                        android:layout_alignParentEnd="true"

                        android:layout_marginStart="15dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/item_menu" />

                    <Spinner
                        android:id="@+id/sp_buoisang"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/sp_tapluyen"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/item_menu" />

                    <Spinner
                        android:id="@+id/sp_buoitrua"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/sp_buoisang"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/item_menu" />

                    <Spinner
                        android:id="@+id/sp_buoiphu"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/sp_buoitrua"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/item_menu" />

                    <Spinner
                        android:id="@+id/sp_buoitoi"
                        android:layout_width="350dp"
                        android:layout_height="48dp"
                        android:layout_below="@+id/sp_buoiphu"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/item_menu"
                        tools:ignore="TouchTargetSizeCheck" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>