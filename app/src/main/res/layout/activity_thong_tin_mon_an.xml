<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fmg_detailfood"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFood_Fragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThongTinMonAn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#0BC585">

            <ImageButton
                android:id="@+id/imagebtn_back2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="2dp"
                android:background="#0BC585"
                android:clickable="true"
                android:minWidth="48dp"
                android:minHeight="48dp"
                app:srcCompat="@drawable/back"
                tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="100dp"
                    android:text="Thông tin món ăn"
                    android:textColor="@color/white"
                    android:textSize="25dp"

                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:background="@drawable/finding_meals_background">

            <LinearLayout
                android:id="@+id/ttMonAn_layout_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nameFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="120dp"
                    android:layout_marginBottom="100dp"
                    android:text="Phở bò tái"
                    android:textColor="@color/black"
                    android:textSize="15pt"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ttMonAn_layout_soluong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ttMonAn_layout_img"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnDatePickerIndetailFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:backgroundTint="#3D62AF"
                    android:drawableLeft="@drawable/baseline_calendar_month_25"
                    android:text="Jul 05 2023"
                    android:textAlignment="viewStart"
                    android:textColor="#0BC585"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ttMonAn_layout_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ttMonAn_layout_soluong"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:text="Chất đạm"
                            android:textColor="@color/black"
                            android:textSize="8pt" />

                        <TextView
                            android:id="@+id/tv_chatProtein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="219g"
                            android:textColor="@color/black"
                            android:textSize="8pt" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBar5"
                        style="@style/CustomProgressBar"
                        android:layout_width="320dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"

                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:max="100"
                        android:minWidth="100dp"
                        android:minHeight="20dp"
                        android:progress="0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:text="Chất béo"

                            android:textColor="@color/black"
                            android:textSize="8pt" />

                        <TextView
                            android:id="@+id/tv_chatbeo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="93g"
                            android:textColor="@color/black"
                            android:textSize="8pt" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBar6"
                        style="@style/CustomProgressBar"
                        android:layout_width="320dp"
                        android:layout_height="25dp"

                        android:layout_gravity="center"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:max="100"
                        android:minWidth="100dp"
                        android:minHeight="20dp"
                        android:progress="0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:text="Tinh bột"

                            android:textColor="@color/black"
                            android:textSize="8pt" />

                        <TextView
                            android:id="@+id/tv_carbs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:text="219g"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:textSize="8pt" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBar7"
                        style="@style/CustomProgressBar"
                        android:layout_width="320dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:max="100"


                        android:minWidth="100dp"
                        android:minHeight="20dp"
                        android:progress="0" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_addFood"
                    android:layout_width="180dp"
                    android:layout_height="55dp"
                    android:background="@drawable/button_login"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:text="Thêm"
                    android:textSize="10pt" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>